{
  "name": "npc-website",
  "version": "1.0.200902",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint --fix",
    "build-analyze": "vue-cli-service build --analyze",
