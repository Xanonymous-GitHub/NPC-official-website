    "webpack-bundle-analyzer": "^3.9.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx,css,html}": [
      "git add .",
      "vue-cli-service lint --fix",
      "git add .",
      "npm run build",
      "sh ./deploy-to-preview.sh"
    ]
